<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/dialog"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <View
        android:id="@+id/spacer"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>


    <View
        app:layout_constraintTop_toBottomOf="@id/spacer"
        android:id="@+id/boarder"
        android:background="@color/very_dark_grey_87"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

    <Button
        android:id="@+id/btn_back"
        style="?android:attr/borderlessButtonStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white_100"
        android:foregroundTint="@color/white_100"
        android:text="@string/back"
        android:textColor="@color/dark_blue_100"
        app:layout_constraintTop_toBottomOf="@id/boarder"
        app:strokeColor="@color/white_100"
        app:strokeWidth="0dp" />


</androidx.constraintlayout.widget.ConstraintLayout>