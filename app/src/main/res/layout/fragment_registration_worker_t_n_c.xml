<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

        <variable
            name="vm"
            type="com.team2.handiwork.viewModel.FragmentRegistrationWorkerTNCViewModel" />
    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/fg_registration_worker_t_n_c"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="100dp" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="8dp"
            android:layout_marginHorizontal="8dp"
            android:layout_marginBottom="16dp">
            
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#E8E8E8">

                <TextView
                    android:id="@+id/terms_and_conditions"
                    android:layout_width="match_parent"
                    android:layout_height="320dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:background="#FFFFFF"
                    android:scrollbars = "vertical"
                    android:layout_above="@id/accept_terms_and_conditions_block"
                    android:layout_alignParentTop="true"
                    android:paddingHorizontal="16dp"
                    android:paddingTop="16dp"/>

                <RelativeLayout
                    android:id="@+id/accept_terms_and_conditions_block"
                    android:layout_above="@id/next_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:layout_marginHorizontal="8dp"
                    android:layout_centerHorizontal="true">

                    <TextView
                        android:id="@+id/accept_terms_and_conditions_text"
                        android:text="I agree to the Terms and Conditions stated above."
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_centerVertical="true"/>

                    <Switch
                        android:id="@+id/user_agreement_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentEnd="true"
                        android:thumbTint="#1A73E9"
                        android:trackTint="#6C92F4" />
                </RelativeLayout>

                <Button
                    android:id="@+id/next_btn"
                    android:layout_above="@id/back_btn"
                    android:text="Next"
                    android:enabled="@{vm.isEnableNextBtn}"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_centerHorizontal="true" />

                <Button
                    android:layout_alignParentBottom="true"
                    android:id="@+id/back_btn"
                    android:text="Back"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginBottom="8dp"
                    android:layout_centerHorizontal="true" />

            </RelativeLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</layout>