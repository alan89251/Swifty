<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_step_1"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle_outline"
        android:backgroundTint="@color/blue_1000"
        android:gravity="center_horizontal|center"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tv_step_1_desc"
        app:layout_constraintEnd_toEndOf="@id/tv_step_1_desc"
        app:layout_constraintStart_toStartOf="@id/tv_step_1_desc" />

    <TextView
        android:id="@+id/tv_step_1_desc"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:minLines="2"
        android:singleLine="false"
        android:text="Personal Information"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/spacer_step_1_2"
        android:layout_width="100dp"
        android:layout_height="2dp"
        android:background="@color/black"
        app:layout_constraintBottom_toBottomOf="@id/tv_step_1"
        app:layout_constraintEnd_toStartOf="@id/tv_step_2"
        app:layout_constraintStart_toEndOf="@id/tv_step_1"
        app:layout_constraintTop_toTopOf="@id/tv_step_1" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_step_2"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle_outline"
        android:backgroundTint="@color/blue_1000"
        android:gravity="center_horizontal|center"
        android:text="2"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tv_step_2_desc"
        app:layout_constraintEnd_toEndOf="@id/tv_step_2_desc"
        app:layout_constraintStart_toStartOf="@id/tv_step_2_desc" />


    <TextView
        android:id="@+id/tv_step_2_desc"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:minLines="2"
        android:singleLine="false"
        android:text="Profile"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_step_3_desc"
        app:layout_constraintStart_toEndOf="@id/tv_step_1_desc"
        app:layout_constraintTop_toTopOf="parent" />

    <Space
        android:id="@+id/spacer_step_2_3"
        android:layout_width="100dp"
        android:layout_height="2dp"
        app:layout_constraintBottom_toBottomOf="@id/tv_step_2"
        app:layout_constraintEnd_toStartOf="@id/tv_step_3"
        app:layout_constraintStart_toEndOf="@id/tv_step_2"
        app:layout_constraintTop_toTopOf="@id/tv_step_2"
        android:background="@color/black" />


    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/tv_step_3"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:background="@drawable/circle_outline"
        android:backgroundTint="@color/blue_1000"
        android:gravity="center_horizontal|center"
        android:text="3"
        android:textAlignment="center"
        android:textColor="@color/white"
        app:layout_constraintBottom_toTopOf="@id/tv_step_3_desc"
        app:layout_constraintEnd_toEndOf="@id/tv_step_3_desc"
        app:layout_constraintStart_toStartOf="@id/tv_step_3_desc" />


    <TextView
        android:id="@+id/tv_step_3_desc"
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:lines="2"
        android:minLines="2"
        android:singleLine="false"
        android:text="Terms &amp; Conditions"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>