<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="obj"
            type="com.team2.handiwork.models.SubServiceType" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/tv_sub_service_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repair"
            android:textAlignment="textStart"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/dark_yellow"
            android:src="@drawable/ic_baseline_check_24"
            app:layout_constraintBottom_toBottomOf="@id/tv_sub_service_type"
            app:layout_constraintEnd_toEndOf="@id/tv_sub_service_type"
            app:layout_constraintTop_toTopOf="@id/tv_sub_service_type"
            app:shapeAppearanceOverlay="@style/Circular" />


    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>