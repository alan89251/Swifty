<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="obj"
            type="com.team2.handiwork.models.ServiceType" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btn_service_type"
            style="@style/SecondaryButton"
            android:layout_width="144dp"
            android:layout_height="104dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="24dp"
            android:gravity="bottom|center_horizontal"
            android:text="@={obj.name}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/iv_service_type"
            android:layout_width="107dp"
            android:layout_height="45dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:elevation="2dp"
            android:gravity="center_horizontal"
            android:scaleType="fitXY"
            android:src="@drawable/photo_placeholder"
            app:layout_constraintBottom_toBottomOf="@id/btn_service_type"
            app:layout_constraintEnd_toEndOf="@id/btn_service_type"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="@id/btn_service_type"
            app:layout_constraintTop_toTopOf="@id/btn_service_type"
            app:layout_constraintVertical_bias="0.271" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@color/checked_color"
            android:elevation="3dp"
            android:src="@drawable/ic_baseline_check_24"
            app:layout_constraintEnd_toEndOf="@id/btn_service_type"
            app:layout_constraintTop_toTopOf="@id/btn_service_type"
            app:shapeAppearanceOverlay="@style/Circular" />

        <!--        android:visibility="@={obj.selected}"-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>