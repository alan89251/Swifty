<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="serviceType"
            type="com.team2.handiwork.models.ServiceType" />

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_margin="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/btn_service_type"
            style="@style/SecondaryButton"
            android:layout_width="105dp"
            android:layout_height="22dp"
            android:layout_centerHorizontal="true"
            android:layout_marginHorizontal="24dp"
            android:elevation="2dp"
            android:gravity="bottom|center_horizontal"
            android:text="@={serviceType.name}"
            android:textColor="@color/buttonColor"
            app:layout_constraintBottom_toBottomOf="@id/iv_service_type"
            app:layout_constraintEnd_toEndOf="@id/iv_service_type"
            app:layout_constraintStart_toStartOf="@id/iv_service_type" />

        <ImageButton
            android:id="@+id/iv_service_type"
            android:layout_width="144dp"
            android:layout_height="104dp"
            android:layout_centerHorizontal="true"
            android:adjustViewBounds="true"
            android:background="@color/secondaryButtonColor"
            android:gravity="center_horizontal"
            android:paddingHorizontal="15dp"
            android:paddingTop="10dp"
            android:scaleType="fitStart"
            android:src="@drawable/photo_placeholder"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_selected"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:background="@color/checked_color"
            android:src="@drawable/ic_baseline_check_24"
            android:tint="@color/white"
            android:visibility="visible"
            app:layout_constraintEnd_toEndOf="@id/iv_service_type"
            app:layout_constraintTop_toTopOf="@id/iv_service_type"
            app:shapeAppearanceOverlay="@style/Circular" />

        <!--        android:visibility="@={obj.visibility}"-->
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>